{% extends "base.html.twig" %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap-3.3.7-dist/css/bootstrap.min.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap-3.3.7-dist/css/bootstrap-theme.min.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('Public/css/app.css') }}" />
{% endblock %}

{% block body %}

    <header>
      {% block header %}
          {% include "@App/Include/Header/header.html.twig" %}
    
        <div class="container text-center">
          <h1>{% block headerTitle %}{% endblock headerTitle %}</h1>
        </div>
      {% endblock header %}
    </header>
  
  <div class="container-fluid">
      <nav id="menu-left" class="col-sm-2">
          {% block menu %}
            {% include "@App/Include/Menu/menu.html.twig" %}
          {% endblock menu %}
      </nav>
    
      {% block container %}
        <div class="col-sm-10">          
            {% block flashmessage %}
                {% for label, messages in app.flashes() %}
                    {% for message in messages %}
                      <div class="alert alert-{{ label }}">
                        <a href="#" class="close" data-dismiss="alert">&times;</a>
                          {{ message }}
                      </div>
                    {% endfor %}
                {% endfor %}
            {% endblock flashmessage %} 

            {% block content %}
        
            {% endblock content %}
        </div><!--end col-->
      
      {% endblock container %}
  </div><!--end div container-->

  {% block footer %}
      {% include "@App/Include/Footer/footer.html.twig" %}
  {% endblock %}

{% endblock body %}

{% block javascripts %}
  {{ parent() }} 
  <script type="text/javascript" src="{{ asset('vendor/JQuery/jquery-3.3.1.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('vendor/bootstrap-3.3.7-dist/js/bootstrap.min.js') }}"></script>  
  <script type="text/javascript" src="{{ asset('Public/js/tooltip-popover.js') }}"></script>  
  <script type="text/javascript" src="{{ asset('Public/js/keep_footer_bottom.js') }}"></script>  
{% endblock javascripts %}